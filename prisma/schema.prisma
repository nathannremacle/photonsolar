// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ============================================
// NextAuth.js Models
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?   // Hashed password (nullable for OAuth users)
  image         String?
  phoneNumber   String    // Phone number (required for B2B)
  companyName   String?   // Company name (optional for B2B)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
  orders   Order[]  // Orders placed by this user

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// E-commerce Models
// ============================================

model Order {
  id         String      @id @default(cuid())
  userId     String
  status     OrderStatus @default(PENDING)
  total      Float       // Total amount in euros
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  items      OrderItem[]

  @@map("orders")
}

model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  productId String   // Reference to Product ID (kept as string for flexibility)
  quantity  Int
  unitPrice Float    // Price at the time of purchase
  createdAt DateTime @default(now())

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("order_items")
}

enum OrderStatus {
  PENDING
  COMPLETED
  CANCELLED
}

// ============================================
// Product Catalog
// ============================================

model Product {
  id                   String   @id // Custom ID like "deye-sun-3-6kw"
  name                 String
  brand                String
  category             String
  subcategory          String?
  price                Float?
  originalPrice        Float?
  sku                  String?
  description          String?  @db.Text
  technicalDescription String?  @db.Text
  image                String?  // Main image URL
  images               String[] // Array of image URLs
  link                 String
  
  // Physical specs
  weight               String?
  dimensions           String?
  warranty             String?
  power                String?
  type                 String?
  voltage              String?
  
  // Features as array
  features             String[]
  
  // Specifications as JSON (key-value pairs)
  specifications       Json?    @db.JsonB
  
  // Documentation links as JSON
  documentation        Json?    @db.JsonB
  
  // Inverter specific filters
  mpptCount            Int?
  apparentPower        String?
  nominalPower         String?
  hasEthernet          Boolean?
  hasWiFi              Boolean?
  networkConnection    String?
  
  // Solar panel specific filters
  cellType             String?
  efficiency           String?
  maxPower             String?
  
  // Battery specific filters
  capacity             String?
  batteryType          String?
  
  // Heat pump specific filters
  cop                  String?
  heatingPower         String?
  
  // General filters
  color                String?
  material             String?
  
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  @@index([category])
  @@index([brand])
  @@index([category, subcategory])
  @@map("products")
}

// ============================================
// CMS - Site Configuration
// ============================================

model SiteConfig {
  id          String   @id @default("main")
  
  // SEO Metadata
  metaTitle       String?
  metaDescription String?  @db.Text
  metaKeywords    String?
  
  // Top Banner
  bannerEnabled   Boolean  @default(true)
  bannerTitle     String?
  bannerSubtitle  String?
  bannerCtaText   String?
  bannerCtaLink   String?
  
  // Section toggles
  bestSellersEnabled  Boolean  @default(true)
  bestSellersIds      String[] // Product IDs for best sellers
  
  clearanceEnabled    Boolean  @default(true)
  clearanceIds        String[] // Product IDs for clearance
  
  newsEnabled         Boolean  @default(true)
  newsSelectedIds     Int[]    // News article IDs to show on homepage
  
  brandsEnabled       Boolean  @default(true)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("site_config")
}

// ============================================
// CMS - Hero Slides
// ============================================

model HeroSlide {
  id              Int      @id @default(autoincrement())
  order           Int      @default(0)
  badge           String
  title           String
  description     String   @db.Text
  cta             String
  ctaLink         String
  bgColor         String
  backgroundImage String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([order])
  @@map("hero_slides")
}

// ============================================
// CMS - Promotions
// ============================================

model Promotion {
  id              Int      @id @default(autoincrement())
  order           Int      @default(0)
  badge           String
  title           String
  description     String   @db.Text
  features        String[]
  cta             String
  ctaLink         String
  bgColor         String
  backgroundImage String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([order])
  @@map("promotions")
}

// ============================================
// CMS - Special Offers
// ============================================

model SpecialOffer {
  id              Int      @id @default(autoincrement())
  order           Int      @default(0)
  title           String
  description     String   @db.Text
  features        String[]
  note            String?  @db.Text
  cta             String
  ctaLink         String
  bgColor         String
  backgroundImage String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([order])
  @@map("special_offers")
}

// ============================================
// CMS - News Articles
// ============================================

model NewsArticle {
  id        Int      @id @default(autoincrement())
  category  String
  title     String
  slug      String   @unique
  date      DateTime
  excerpt   String   @db.Text
  content   String   @db.Text
  image     String?
  published Boolean  @default(true)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
  @@index([published])
  @@index([date])
  @@map("news_articles")
}

// ============================================
// CMS - Brands (Partner logos)
// ============================================

model Brand {
  id        Int      @id @default(autoincrement())
  order     Int      @default(0)
  name      String   // Can be text name or image path
  link      String
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([order])
  @@map("brands")
}

// ============================================
// CMS - Downloads
// ============================================

model Download {
  id          Int      @id @default(autoincrement())
  order       Int      @default(0)
  category    String
  title       String
  description String?  @db.Text
  fileUrl     String
  fileSize    String?
  fileType    String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([order])
  @@map("downloads")
}
